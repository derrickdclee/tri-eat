extends layout

block content
  .inner
    h2 Edit Your Account
    form(action="/account" method="POST")
      label(for="userName") Name
      input(type="text" id="userName" name="name" value=user.name)
      label(for="userEmail") Email
      input(type="email" id="userEmail" name="email" value=user.email)
      input.button(type="submit" value="Update Account")
 
