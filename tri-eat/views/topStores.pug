extends layout

block content
  .inner
    - const plural = stores.length > 1? 'Stores' : 'Store'
    h2 Top #{stores.length} #{plural}
    table.table
      thead
        td Photo
        td Ranking
        td Name
        td No. of Reviews
        td Average Rating 
      each store, i in stores
        tr
          td
            a(href=`/store/${store.slug}`)
              img(width=200 src=`/uploads/stores/${store.photo || 'store.png'}` alt=store.name)
          td #{i + 1}
          td: a(href=`/store/${store.slug}`) #{store.name}
          td #{store.reviews.length}
          td #{Math.round(store.avgRating * 10) / 10} / 5
