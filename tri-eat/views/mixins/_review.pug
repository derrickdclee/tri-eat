mixin review(review)
  .review__header
    .review__author
      img.avatar(src=review.author.gravatar)
      p= review.author.name
      p= review.author.ratingStat.avgRating
    .review__stars
      each category in ['Food', 'Service', 'Ambiance']
        .review__category
          p= category
          p= `★`.repeat(review.rating[category.toLowerCase()]) + `✩`.repeat(5 - review.rating[category.toLowerCase()])
    time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
  .review__body
    p= review.text
